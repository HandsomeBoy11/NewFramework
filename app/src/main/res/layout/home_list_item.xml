<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/yellow" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_item"
        android:singleLine="true"
        android:text="喂喂海鲜大排档"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp_big" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_item"
        android:singleLine="true"
        android:text="现金抵用1次，营业时间内均可使用"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_item"
        android:singleLine="true"
        android:text="8.5"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:text="已售3882份"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/sp_smaller" />
    <!--<View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white_light"/>-->

</RelativeLayout>