<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/yellow"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_address"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:drawablePadding="6dp"
        android:drawableRight="@mipmap/nav_icon_aroow_up_s"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="北京" />

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/home_search"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_margin="4dp"
            android:background="@mipmap/search" />

        <EditText
            android:id="@+id/et_search"
            android:hint="请输入商品名、店铺名"
            android:textColor="#fff"
            android:textCursorDrawable="@null"
            android:cursorVisible="false"
            android:textColorHint="#5fff"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:singleLine="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_scanner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/nav_icon_scan_nor"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:background="@mipmap/nav_icon_message_nor"
       />
</LinearLayout>